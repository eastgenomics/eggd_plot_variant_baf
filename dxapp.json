{
    "name": "eggd_plot_variant_baf",
    "title": "eggd_plot_variant_baf",
    "summary": "Plot BAF and Depth with Karyoploter",
    "version": "2.0.0",
    "changeLog": [
        {
            "version": "2.0.0",
            "date": "2025-10-01",
            "description": "Make app more flexible (remove hardcoded inputs). Improve plotting symmetry."
        }
    ],
    "inputSpec":
    [
      {
        "name": "vcf",
        "label": "VCF",
        "class": "file",
        "optional": false,
        "patterns": [
          "*.vcf$", "*.vcf.gz$"
        ],
        "help": "VCF"
      },
      {
        "name": "packages",
        "label": "R Packages",
        "class": "file",
        "optional": false,
        "patterns": [
          "*.tar.gz$"
        ],
        "help": "Tarball of compiled R packages"
      },
      {
        "name": "min_baf",
        "label": "Minimum BAF",
        "class": "string",
        "optional": true,
        "help": "Minimum BAF allowed"
      },
      {
        "name": "max_baf",
        "label": "Maximum BAF",
        "class": "string",
        "optional": true,
        "help": "Maximum BAF allowed"
      },
      {
        "name": "bin_size",
        "label": "Bin size",
        "class": "string",
        "optional": true,
        "help": "Bin size for plotting"
      },
      {
        "name": "max_depth_plot",
        "label": "Maximum depth",
        "class": "string",
        "optional": true,
        "help": "Maximum depth for y-axis"
      },
      {
        "name": "min_depth",
        "label": "Minimum depth",
        "class": "string",
        "optional": true,
        "help": "Minimum depth for plotting"
      },
      {
        "name": "chr_names",
        "label": "Chromosome names",
        "class": "string",
        "optional": true,
        "help": "Chromosome names used for axis labels"
      }
    ],
    "outputSpec": [
      {
        "name": "baf_plot",
        "label": "BAFs Plot",
        "help": "",
        "class": "file",
        "patterns": ["*.png"]
      }
    ],
    "runSpec": {
      "timeoutPolicy": {
        "*": {
          "hours": 1
        }
      },
      "interpreter": "bash" ,
      "file": "src/script.sh",
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd2_v2_x4"
        }
      },
      "assetDepends": [
        {
          "name": "htslib",
          "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
          "folder": "/app_assets/htslib/htslib_v1.15.0",
          "version": "1.15.0"
        }
      ],
      "distribution": "Ubuntu",
      "release": "24.04",
      "version": "0",
      "execDepends": []
    },
    "openSource": true,
   
    "access": {                         
      "project": "CONTRIBUTE",
      "allProjects": "CONTRIBUTE"
  },
  "developers": ["org-emee_1"],
  "authorizedUsers": ["org-emee_1"]
}
